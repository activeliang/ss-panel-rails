<div id="wrapper">
  <%= render 'layouts/nav' %>
  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">用户编辑</h1>
      </div>
    </div>
    <div class="row">
      <%= render "layouts/flash" %>
      <div class="col-lg-5">
        <%= form_for @user, url: "/admin/users/#{@user.id}" do |f| %>
          <p>
          <%= f.label :邮箱 %>
          <%= f.email_field :email,class: "form-control" %>
          </p>
          <p>
          <%= f.label :用户名 %>
          <%= f.text_field :user_name,class:"form-control" %>
          </p>
          <p>
          <%= f.label :登录密码 %>
          <%= f.password_field :pass,class:"form-control" %>
          </p>
          <p>
          <%= f.label :shadowsocks密码 %>
          <%= f.text_field :passwd,class:"form-control" %>
          </p>
          <p>
          <%= f.label :端口 %>
          <%= f.number_field :port,class:"form-control" %>
          </p>
          <p>
          <%= f.label "流量(GB)" %>
          <%= f.number_field :transfer_enable,class:"form-control",value: "#{@user.transfer_enable/1024**3}" %>
          </p>
          <p>
          <%= f.submit "修改",class: "btn btn-info" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
